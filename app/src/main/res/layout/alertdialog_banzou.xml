<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/shape_edit_daoruqupu"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    android:paddingTop="@dimen/dp_20"
    android:paddingBottom="@dimen/dp_30">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="关联伴奏"
        android:textColor="#000000"
        android:textSize="@dimen/sp_15"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/tv_null"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_20"
        android:text="暂无关联伴奏，可前往关联"
        android:textColor="#000000"
        android:textSize="@dimen/sp_15" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rec_guanlian"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_200"
        android:layout_marginLeft="@dimen/dp_20"
        android:layout_marginTop="@dimen/dp_20"
        android:layout_marginRight="@dimen/dp_20" />

    <TextView
        android:id="@+id/tv_guanlian"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_20"
        android:background="@drawable/shape_guanlian"
        android:paddingLeft="@dimen/dp_80"
        android:paddingTop="@dimen/dp_15"
        android:paddingRight="@dimen/dp_80"
        android:paddingBottom="@dimen/dp_15"
        android:text="关联伴奏"
        android:textColor="#35D0C5"
        android:textSize="@dimen/sp_15" />
</LinearLayout>