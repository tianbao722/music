<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    tools:context=".ui.activity.zhujiemian.JiePaiQiActivity">

    <ImageView
        android:id="@+id/iv_back"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp_5"
        android:layout_marginTop="@dimen/dp_5"
        android:padding="@dimen/dp_10"
        android:src="@mipmap/fanhui"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="节拍器"
        android:textColor="#000000"
        android:textSize="@dimen/sp_15"
        app:layout_constraintBottom_toBottomOf="@+id/iv_back"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@+id/iv_back" />

    <ImageButton
        android:id="@+id/btn_play"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginTop="@dimen/dp_60"
        android:background="@drawable/selector_search_tab_bg"
        android:clickable="true"
        android:focusable="true"
        android:src="@drawable/ic_play"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <ImageButton
        android:id="@+id/btn_increase_molecule"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:layout_marginLeft="@dimen/dp_30"
        android:layout_marginRight="@dimen/dp_7"
        android:background="@drawable/selector_search_tab_bg"
        android:clickable="true"
        android:focusable="true"
        android:src="@drawable/ic_increase"
        app:layout_constraintBottom_toBottomOf="@+id/tv_rhythm"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="@+id/tv_rhythm" />

    <ImageButton
        android:id="@+id/btn_add_molecule"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:layout_marginLeft="@dimen/dp_15"
        android:background="@drawable/selector_search_tab_bg"
        android:clickable="true"
        android:focusable="true"
        android:src="@drawable/ic_add"
        app:layout_constraintBottom_toBottomOf="@+id/tv_rhythm"
        app:layout_constraintLeft_toRightOf="@+id/btn_increase_molecule"
        app:layout_constraintTop_toTopOf="@+id/tv_rhythm" />

    <TextView
        android:id="@+id/tv_rhythm"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="@dimen/dp_30"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="60dp"
        android:text="3/4"
        android:textColor="#000"
        android:textSize="35sp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btn_play" />

    <ImageButton
        android:id="@+id/btn_increase_deno"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:layout_marginRight="@dimen/dp_30"
        android:background="@drawable/selector_search_tab_bg"
        android:clickable="true"
        android:focusable="true"
        android:src="@drawable/ic_increase"
        app:layout_constraintBottom_toBottomOf="@+id/tv_rhythm"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@+id/tv_rhythm" />

    <ImageButton
        android:id="@+id/btn_add_meno"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:layout_marginLeft="@dimen/dp_7"
        android:layout_marginRight="@dimen/dp_15"
        android:background="@drawable/selector_search_tab_bg"
        android:clickable="true"
        android:focusable="true"
        android:src="@drawable/ic_add"
        app:layout_constraintBottom_toBottomOf="@+id/tv_rhythm"
        app:layout_constraintRight_toLeftOf="@+id/btn_increase_deno"
        app:layout_constraintTop_toTopOf="@+id/tv_rhythm" />

    <ImageButton
        android:id="@+id/btn_increase"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginLeft="@dimen/dp_40"
        android:background="@drawable/selector_search_tab_bg"
        android:clickable="true"
        android:focusable="true"
        android:src="@drawable/ic_increase"
        app:layout_constraintBottom_toBottomOf="@+id/tv_speed"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="@+id/tv_speed" />

    <TextView
        android:id="@+id/tv_speed"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_50"
        android:text="128"
        android:textColor="#000"
        android:textSize="35sp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_rhythm" />

    <ImageButton
        android:id="@+id/btn_add"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginRight="@dimen/dp_40"
        android:background="@drawable/selector_search_tab_bg"
        android:clickable="true"
        android:focusable="false"
        android:src="@drawable/ic_add"
        app:layout_constraintBottom_toBottomOf="@+id/tv_speed"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@+id/tv_speed" />
</androidx.constraintlayout.widget.ConstraintLayout>