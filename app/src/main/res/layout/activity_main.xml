<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/appbg"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    tools:context=".MainActivity">
    <!-- 戴谱乐 -->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_170">

        <ImageView
            android:layout_width="@dimen/dp_210"
            android:layout_height="@dimen/dp_110"
            android:layout_marginRight="@dimen/dp_70"
            android:src="@mipmap/dpl"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent" />
    </androidx.constraintlayout.widget.ConstraintLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_55"
        android:gravity="center_horizontal"
        android:orientation="horizontal">
        <!-- 鼓机伴奏 -->
        <LinearLayout
            android:id="@+id/ll_lianxiguji"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_marginRight="@dimen/dp_20"
            android:orientation="vertical">

            <ImageView
                android:layout_width="@dimen/dp_70"
                android:layout_height="@dimen/dp_70"
                android:scaleType="fitXY"
                android:src="@mipmap/gjbz" />

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_3"
                android:src="@mipmap/tgjbz"
                 />
        </LinearLayout>
        <!-- 我的音乐 -->
        <LinearLayout
            android:id="@+id/ll_bendiyinyue"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_marginLeft="@dimen/dp_20"
            android:layout_marginRight="@dimen/dp_20"
            android:orientation="vertical">

            <ImageView
                android:layout_width="@dimen/dp_70"
                android:layout_height="@dimen/dp_70"
                android:scaleType="fitXY"
                android:src="@mipmap/wdbz" />

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_2"
                android:src="@mipmap/twdbz"
                 />
        </LinearLayout>
        <!-- 节拍器 -->
        <LinearLayout
            android:id="@+id/ll_jiepaiqi"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_marginLeft="@dimen/dp_20"
            android:orientation="vertical">

            <ImageView
                android:layout_width="@dimen/dp_70"
                android:layout_height="@dimen/dp_70"
                android:scaleType="fitXY"
                android:src="@mipmap/jpxy" />

            <ImageView
                android:layout_width="match_parent"
                android:layout_marginTop="@dimen/dp_2"
                android:layout_height="wrap_content"
                android:src="@mipmap/tjpxy"
                 />

        </LinearLayout>
        <!-- 我的乐谱 -->
        <LinearLayout
            android:id="@+id/ll_bendiqupu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_17"
            android:layout_marginRight="@dimen/dp_17"
            android:orientation="vertical"
            android:visibility="gone">

            <ImageView
                android:layout_width="@dimen/dp_40"
                android:layout_height="@dimen/dp_40"
                android:scaleType="fitXY"
                android:src="@mipmap/wdyp" />

            <ImageView
                android:layout_width="@dimen/dp_40"
                android:layout_height="@dimen/dp_25" />

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_110"
        android:gravity="center_horizontal"
        android:orientation="horizontal">
        <!-- 下载音乐 -->
        <LinearLayout
            android:id="@+id/ll_xiazaiyinyue"
            android:layout_width="wrap_content"
            android:gravity="center"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/dp_20"
            android:orientation="vertical">


            <ImageView
                android:layout_width="@dimen/dp_70"
                android:layout_height="@dimen/dp_70"
                android:scaleType="fitXY"
                android:src="@mipmap/xzbz" />

            <ImageView
                android:layout_width="match_parent"
                android:layout_marginTop="@dimen/dp_2"
                android:layout_height="wrap_content"
                android:src="@mipmap/txzbz"
                 />
        </LinearLayout>
        <!-- 系统设置 -->
        <LinearLayout
            android:id="@+id/tv_systemsetting"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_marginLeft="@dimen/dp_20"
            android:layout_marginRight="@dimen/dp_20"
            android:orientation="vertical">


            <ImageView
                android:layout_width="@dimen/dp_70"
                android:layout_height="@dimen/dp_70"
                android:scaleType="fitXY"
                android:src="@mipmap/xtsz" />

            <ImageView
                android:layout_width="match_parent"
                android:layout_marginTop="@dimen/dp_2"
                android:layout_height="wrap_content"
                android:src="@mipmap/txtsz"
                 />
        </LinearLayout>

        <!-- 伴奏管理 -->
        <LinearLayout
            android:id="@+id/ll_wenjianguanli"
            android:layout_width="wrap_content"
            android:gravity="center"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_20"
            android:orientation="vertical">

            <ImageView
                android:layout_width="@dimen/dp_70"
                android:layout_height="@dimen/dp_70"
                android:scaleType="fitXY"
                android:src="@mipmap/bzgl" />

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_2"
                android:src="@mipmap/tbzgl"/>
        </LinearLayout>
        <!-- 下载乐谱 -->
        <LinearLayout
            android:id="@+id/ll_xiazaiqupu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_17"
            android:layout_marginRight="@dimen/dp_17"
            android:orientation="vertical"
            android:visibility="gone">


            <ImageView
                android:layout_width="@dimen/dp_40"
                android:layout_height="@dimen/dp_40"
                android:scaleType="fitXY"
                android:src="@mipmap/xzyp" />

            <ImageView
                android:layout_width="@dimen/dp_40"
                android:layout_height="@dimen/dp_25"
                android:src="@mipmap/txzyp" />
        </LinearLayout>
        <!-- 免费教学 -->
        <LinearLayout
            android:id="@+id/ll_mianfeijiaoxue"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_17"
            android:layout_marginRight="@dimen/dp_17"
            android:orientation="vertical"
            android:visibility="gone">

            <ImageView
                android:layout_width="@dimen/dp_40"
                android:layout_height="@dimen/dp_40"
                android:scaleType="fitXY"
                android:src="@mipmap/mfjx" />

            <ImageView
                android:layout_width="@dimen/dp_40"
                android:layout_height="@dimen/dp_25"
                android:src="@mipmap/tmfjx" />
        </LinearLayout>
        <!-- 动态乐谱 -->
        <LinearLayout
            android:id="@+id/ll_dongtaipu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_17"
            android:orientation="vertical"
            android:visibility="gone">

            <ImageView
                android:layout_width="@dimen/dp_40"
                android:layout_height="@dimen/dp_40"
                android:scaleType="fitXY"
                android:src="@mipmap/xzyy" />

            <ImageView
                android:layout_width="@dimen/dp_40"
                android:layout_height="@dimen/dp_25"
                android:src="@mipmap/tdtyp" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_100"
        android:gravity="center_horizontal"
        android:orientation="horizontal"
        android:visibility="gone">

        <!-- 文件管理 -->
        <LinearLayout
            android:id="@+id/ll_zengzhifuwu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_17"
            android:layout_marginRight="@dimen/dp_17"
            android:orientation="vertical">


            <ImageView
                android:layout_width="@dimen/dp_45"
                android:layout_height="@dimen/dp_45"
                android:scaleType="fitXY"
                android:src="@mipmap/wjgl" />

            <ImageView
                android:layout_width="@dimen/dp_45"
                android:layout_height="@dimen/dp_25"
                android:src="@mipmap/twjgl" />
        </LinearLayout>

        <!-- 操作说明 -->
        <LinearLayout
            android:id="@+id/tv_caozuoshuoming"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_17"
            android:layout_marginRight="@dimen/dp_17"
            android:orientation="vertical">


            <ImageView
                android:layout_width="@dimen/dp_45"
                android:layout_height="@dimen/dp_45"
                android:scaleType="fitXY"
                android:src="@mipmap/sysm" />

            <ImageView
                android:layout_width="@dimen/dp_45"
                android:layout_height="@dimen/dp_25"
                android:src="@mipmap/tsysm" />
        </LinearLayout>


    </LinearLayout>
</LinearLayout>